<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"

        android:layout_toRightOf="@id/mainTextView2"
        android:text="55555555555"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mainTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/mainImageView"
        android:gravity="center"
        android:text="222kjedjd"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mainTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/mainImageView"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="5555550" />

    <TextView
        android:id="@+id/mainTextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTextView2"
        android:layout_toRightOf="@id/mainTextView3"
        android:layout_centerInParent="true"

        android:gravity="end"
        android:text="55555555"
        android:textSize="20dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:visibility="visible"
        >
    </View>

</RelativeLayout>